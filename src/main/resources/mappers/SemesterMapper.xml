<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.SemesterMapper">

    <resultMap id="semesterResultMap" type="org.example.model.Semester">
        <id property="semesterId" column="semester_id"/>
        <result property="semesterName" column="semester_name"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <sql id="semesterColumns">
        semester_id, semester_name, start_date, end_date
    </sql>

    <select id="getById" resultMap="semesterResultMap" parameterType="int">
        SELECT <include refid="semesterColumns"/> FROM semester WHERE semester_id = #{id}
    </select>

    <insert id="create" parameterType="org.example.model.Semester" useGeneratedKeys="true" keyProperty="semesterId">
        INSERT INTO semester (<include refid="semesterColumns"/>) VALUES (#{semesterName}, #{startDate}, #{endDate})
    </insert>

    <update id="update" parameterType="org.example.model.Semester">
        UPDATE semester SET semester_name = #{semesterName}, start_date = #{startDate}, end_date = #{endDate}
        WHERE semester_id = #{semesterId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM semester WHERE semester_id = #{id}
    </delete>

    <select id="getAll" resultMap="semesterResultMap">
        SELECT <include refid="semesterColumns"/> FROM semester
    </select>

</mapper>
